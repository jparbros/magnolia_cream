<% if @shopping_address.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shopping_address.errors.count, "error") %> prohibited this shopping_address from being saved:</h2>

    <ul>
    <% @shopping_address.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class='main-address'>
  <div class="inline">
    <div class="field column">
       <%= f.text_field :first_name, :class => 'span-3', placeholder: 'First name' %>
    </div>

    <div class="field column">
      <%= f.text_field :last_name, :class => 'span-3', placeholder: 'Last name' %>
    </div>
  </div>
  <div class='clear'></div>
    <div class="inline">
      <div class="field column">
        <%= f.text_field :address1, placeholder: 'Address' %><br/>
        <%= f.text_field :address2, placeholder: 'Address line 2' %>
      </div>
    </div>
  <div class='clear'></div>

    <div class="field column">
      <%= f.select  :state_id, @states,
                    :include_blank => true, :prompt => 'State'%>
    </div>
  <div class='clear'></div>
    <div class="inline">
      <div class="field column">
        <%= f.text_field :city, :class => 'span-3', placeholder: 'City' %>
      </div>
      <div class="field column">
        <%= f.text_field :zip_code, :class => 'span-3', placeholder: 'Postal code' %>
      </div>

    <% if nil %>
      <div class="field column">
        <%= f.label :state_name %>
        <%= f.text_field :state_name, :class => 'span-3' %>
      </div>
    <% end %>

    </div>

  <div class='clear'></div>
    <div class="field">
      <%#= f.input :phone %>
    </div>
</div>

<div class="actions prepend-1">
  <%= submit_tag 'Create', :class => 'medium-btn' %>
</div>
