.row
  .col-lg-12
    #carousel-example-generic.carousel.slide
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}

      .carousel-inner
        .item.item-free-shipping.active
          = image_tag 'carousel/free-shipping.png', class: 'free-shipping'
          = link_to "/products/Crema-Magnolia", class: 'create-yours' do
            = image_tag('carousel/create-yours.png')
        .item
          = image_tag 'carousel/flavor.png'
          = link_to "/products/Crema-Magnolia", class: 'create-yours flavor' do
            = image_tag('carousel/create-yours.png')
        .item
          = image_tag 'carousel/4-simple-steps.png'
          = link_to "/products/Crema-Magnolia", class: 'create-yours steps' do
            = image_tag('carousel/create-yours.png')

