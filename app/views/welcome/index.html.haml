.new-sections
  .join-club
    %ul.social-networks
      %li
        = image_tag 'rss-icon.png'
      %li
        = image_tag 'facebook-icon.png'
      %li
        = image_tag 'youtube-icon.png'
      %li
        = image_tag 'twitter-icon.png'
      %li
        = image_tag 'pinterest-icon.png'
    
    = image_tag 'magnolia-times.png'
    
    %p.col-lg-10.col.md-10
      Suscribe to receive all the latest news about our products, promotions and skin health tips!
    
    %input.col-lg-10.col.md-10{type: 'text', placeholder: 'your email address'}
    %input{type: 'submit', value: "Subscribe to get it!", class: 'btn btn-magnolia'}

  .contact-us
    = form_tag '/contacto', id: 'contact-form' do
    
      .form-group
        = text_field_tag 'nombre', '', class: 'form-control', placeholder: 'your name'

      .form-group
        = text_field_tag 'email', '', class: 'form-control', placeholder: 'your email address'
         
      .form-group
        = text_area_tag 'mensaje', '', class: 'form-control', placeholder: 'message'

      .form-group
        = submit_tag 'Submit', class: 'btn btn-magnolia'
    
