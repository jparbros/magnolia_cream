.row
  .span6
    = form_for @user_session, as: :user_session, url: user_sessions_path(@user_session), html: {class: 'form-horizontal'} do |form|
      %h3 Login
      %fieldset
        .control-group
          = form.label :email, 'Email', class: 'control-label'
          .controls
            = form.email_field :email, :autocomplete => 'off', :autocapitalize => 'off'

        .control-group
          = form.label :password, 'Password', class: 'control-label'
          .controls
            = form.password_field :password, :autocomplete => 'off', :autocapitalize => 'off'
          
        .control-group
          .controls
            = form.submit "Login", class: 'btn btn-primary'

        .control-group
          .controls
            = link_to I18n.t('user_sessions.forgot_password'), new_customer_password_reset_path()

  .span6
    = form_for @user, :url => customer_registrations_path(@user), html: {class: 'form-horizontal'}  do |form|
      %h3= I18n.t 'user_sessions.registration'
      %fieldset
        .control-group
          =form.label :email, 'Email', class: 'control-label'
          .controls
            = form.email_field :email, :autocomplete => 'off', :autocapitalize => 'off'

        .control-group
          =form.label :email, 'Password', class: 'control-label'
          .controls
            = form.password_field :password, :autocomplete => 'off', :autocapitalize => 'off'

        .control-group
          =form.label :email, I18n.t('user_sessions.password_confirmation'), class: 'control-label'
          .controls
            = form.password_field :password_confirmation, :autocomplete => 'off', :autocapitalize => 'off' 

        .control-group
          .controls
            = form.submit I18n.t('user_sessions.register'), class: 'btn btn-primary'
