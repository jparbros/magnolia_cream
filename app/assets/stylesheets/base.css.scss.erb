body {
  background-color: transparent;
  color: #f7f5cb;
  font-family: 'BenchNine', sans-serif;
  font-size: 20px;
  
  header {
    background: url('/assets/background-navbar.png') repeat;
    height: 215px;
    
    .nav-container {
      @extend .col-lg-6;
      @extend .col-md-6;
      text-align: center;
      margin-top: 25px;
    }
    
    span.create-cream {
      font-family: "Lobster";
      font-size: 50pt;
      text-shadow: 4px 0 0 #852C43, -4px 0 0 #852C43, 0 4px 0 #852C43, 0 -4px 0 #852C43, 2px 2px #852C43, -2px -2px 0 #852C43, 2px -2px 0 #852C43, -2px 2px 0 #852C43;
    }
    
    ul.gen-nav {
      li {
        float: left;
        list-style-type: none;
        border-right: 2px #f7f5cb solid;
        padding: 0 10px 0 0;
        margin: 0 0 0 10px;
        font-family: "Lemondrop";
        font-size: 14.5pt;

        &:first-child {
          margin: 0;
        }

        
        &:last-child {
          border: 0;
        }
        
        a {
          color: #f7f5cb;
        }
      }
    }
  }
}

html, body {height: 100%;}

.btn-magnolia {
  background-color: #8bb7a8;
  color: #fff;
  font-family: "Lemondrop";
  font-size: 14px;
}

.nav-box {
  background-color: #8b1b3f;
  -webkit-border-bottom-left-radius: 10px;
  -moz-border-radius-bottomleft: 10px;
  border-bottom-left-radius: 10px;
  text-align: center;
  padding: 15px;
  font-family: "Lemondrop";
  
  .call-us {
    font-family: "Lobster";
  }
  
  ul {
    list-style: none;
    display: inline-block;
    margin: 0;
    padding: 0;

    li {
      float:left;
      margin-right: 5px;
      font-size: 16.5pt;
      
      a {
        color: #f7f5cb;
        font-size: 13px
      }
    }
  }
}

#wrap {
  min-height: 100%;
}

header {height: 145px; margin: 0 0 10px 0;}

footer {
  background-color: #8b1b3f;
  height: 115px;
  padding: 15px 0 0 0;
  text-align: center;
  position: relative;
  clear: both;
  margin: 20px 0 0 0;
}


.main-text-container { float: right;}

img#logo { margin: 0 auto; display: block;}

