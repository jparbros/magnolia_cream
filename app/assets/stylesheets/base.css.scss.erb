  label {
    color: #EBCC8C;
    font-size: 20px;
    font-family: "Lobster";
  }
}

.button-large {
  background: url('/assets/button-large.png') no-repeat;
  border: 0;
  color: #fff;
  font-family: "Lobster";
  font-size: 32px;
  height: 64px;
  text-align: center;
  width: 376px !important;
}

.social-networks-links {
  float: right;
  margin: 0 50px 0 0;
  
  a {
    background: url('/assets/social-networks.png') no-repeat;
    display: inline-block;
    height: 21px;
    text-indent: -9999px;
    width: 21px;
    
    &.twitter {
      background-position: 0px -23px;
      
      &:hover {
        background-position: 0px 0px;
      }
    }
    
    &.facebook {
      background-position: -67px -23px;
      
      &:hover {
        background-position: -67px 0px;
      }
    }
    
    &.pinterest {
      background-position: -21px -23px;
      
      &:hover {
        background-position: -21px 0px;
      }
    }
    
    &.google-plus {
      background-position: -44px -23px;
      
      &:hover {
        background-position: -44px 0px;
      }
    }
  }
}

span.any-change {
  color: #EBCC8C;
  font-family: 'BenchNine', sans-serif;
  font-size: 24px;
}

