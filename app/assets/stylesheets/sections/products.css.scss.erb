.circle-button {
  border-radius: 80px;
  padding: 30px 10px;
  margin-top: 30px;
}

.hide-top {margin-top: -99999px;}

#submit-cream { 
  opacity: 0;
  filter:alpha(opacity=0);
  position: absolute;
  top: 400px;
  left: 50%;
}

#animacion {
  width: 376px;
  height: 399px;
  margin-top: -1999px;
  margin-bottom: 1700px;
  
  &.started {margin-top: 0px;}
  
  #fill {
    background: url("/assets/bottle/frasco-relleno.png") no-repeat 0px -385px;
    width: 337px;
    position: relative;
    z-index: -10;
    left: 23px;
    
    &.step0 {
      height: 0px;
      top: -49px;
      background-position: 0px -266px;
      -webkit-transition: all 1300ms linear;
      -moz-transition: all 1300ms linear;
      -ms-transition: all 1300ms linear;
      -o-transition: all 1300ms linear;
      transition: all 1300ms linear;
    }
    
    &.step1 {
      height: 67px;
      top: -116px;
      background-position: 0px -199px;
      -webkit-transition: all 1300ms linear;
      -moz-transition: all 1300ms linear;
      -ms-transition: all 1300ms linear;
      -o-transition: all 1300ms linear;
      transition: all 1300ms linear;
    }
    
    &.step2 {
      height: 134px;
      top: -183px;
      background-position: 0px -132px;
      -webkit-transition: all 1300ms linear;
      -moz-transition: all 1300ms linear;
      -ms-transition: all 1300ms linear;
      -o-transition: all 1300ms linear;
      transition: all 1300ms linear;
    }
    
    &.step3 {
      height: 201px;
      top: -250px;
      background-position: 0px -65px;
      -webkit-transition: all 1300ms linear;
      -moz-transition: all 1300ms linear;
      -ms-transition: all 1300ms linear;
      -o-transition: all 1300ms linear;
      transition: all 1300ms linear;
    }
    
    &.step4 {
      height: 266px;
      top: -315px;
      background-position: 0px 0px;
      -webkit-transition: all 1300ms linear;
      -moz-transition: all 1300ms linear;
      -ms-transition: all 1300ms linear;
      -o-transition: all 1300ms linear;
      transition: all 1300ms linear;
    }
  }
}

#properties_details {
  font-size: 12px;
}

.ingredients-container {
  .properties {
    display: none;
  }
}

.steps {
  background: url('/assets/pasos.png') no-repeat;
  height: 50px;
  margin: 0 auto 25px auto;
  width: 943px;
  
  &.step0 { background-position: 0px 0px;}
  &.step1 { background-position: 0px -50px;}
  &.step2 { background-position: 0px -100px;}
  &.step3 { background-position: 0px -150px;}
  &.step4 { background-position: 0px -200px;}
}

.button-steps {
  background: url('/assets/button.png') no-repeat;
  color: #EED297;
  font-family: "Lobster";
  font-size: 28px;
  width: 145px;
  text-align: center;
  padding: 5px 0 20px 0;
  margin-bottom: 10px;
  
  &:hover {color: #EED297;}
  
  &.checkout-button {
    background: url('/assets/checkout-button.png') no-repeat;
    padding: 10px 0;
    width: 305px;
    display: none;
  }
}

.ingredients-container {
  margin-bottom: 50px;
}

#skin-type, #power-blend, #topping, #flavor {
  img {cursor: pointer;}
  
  img:hover {
    -moz-transform: rotate(-20deg);
    -webkit-transform: rotate(-20deg);
    -o-transform: rotate(-20deg);
    -ms-transform: rotate(-20deg);
    transform: rotate(-20deg);
  }
}

.checked-icon {
  width: 54px;
  height: 54px;
  margin-bottom: -54px;
  position: relative;
}

#power-blend, #flavor, #topping, #skin-type {
  .link-property {
    float: left;
  }
}

#skin-type {
  .link-property {
    max-height: 219px;
    max-width: 219px;
  }
}

.link-property.checked::after {
  content: url("/assets/checked.png");
  position: relative;
  top: -150px;
  left: 110px;
  z-index: 1040;
  
  #skin-type & {
    top: -200px;
    left: 160px;
  
  }
}

#power-blend, #flavor, #topping {
  .link-property {
    max-height: 167px;
    max-width: 167px;
  }
}

#extra {
  .link-property {
    display: inline-table;
    max-height: 136px;
    max-width: 218px;
  }
}

.link-property.checked {
  [class*=ff] & {
    display: inline !important;
  }
}

#instruccions {
  color: #852C43;
}