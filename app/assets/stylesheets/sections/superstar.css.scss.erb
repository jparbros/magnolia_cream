.superstar-container {
  .superstar {
    background: url('/assets/prototype-bg.png') no-repeat;
    width: 1262px;
    height: 622px;
    margin: 30px auto 0 auto;
  
    .title {
      position: relative;
      top: -10px;
      left: -35px;
    }
  
    .superstar-name {
      color: #3bc1f8;
      text-shadow: 4px 0 0 #fff, -4px 0 0 #fff, 0 4px 0 #fff, 0 -4px 0 #fff, 2px 2px #fff, -2px -2px 0 #fff, 2px -2px 0 #fff, -2px 2px 0 #fff;
      font-family: "Lemondrop";
      font-size: 70pt;
      -webkit-transform: rotate(-6deg); 
      -moz-transform: rotate(-6deg);
      position: relative;
      top: -120px;
      left: 80px;
      margin-bottom: -50px;
    }
  
    .superstar-quoete {
      font-family: "Lemondrop";
      font-size: 36px;
      color: #fff;
      width: 80%;
      margin: 35px auto 0 auto;
    }
  
    .superstar-properties {
      text-align: center;
      margin: 20px 0 0 0;

      .superstar-property {
        display: inline-block;
        margin: 0 10px 0 0;
      
        .superstar-property-image {
          border: 8px #3bc1f8 solid;
          border-radius: 100px;
          background-color: #3bc1f8;
        }
        
        span {
          font-family: "Brush Script";
          color: #3bc1f8;
          font-size: 24pt;
          text-shadow: 4px 0 0 #fff, -4px 0 0 #fff, 0 4px 0 #fff, 0 -4px 0 #fff, 2px 2px #fff, -2px -2px 0 #fff, 2px -2px 0 #fff, -2px 2px 0 #fff;
          margin: -50px 0 0 50px;
          display: block;
        }
      }
    
      img {
        width: 167px;
        height: 167px;
      }
    }
  }


  .superstar-bottom {
    width: 1262px;
    margin: 30px auto 100px auto;
  
    .supertar-description {
      display: inline-block;
      width: 990px;
      color: #8b1b3f;
      font-family: "Lemondrop";
      font-size: 14pt;
    }
  
    .superstar-actions {
      display: inline-block;
      width: 262px;
    }
  }

  .create-yours {
    position: relative;
    top: -850px;
    float: right;
  }
}
